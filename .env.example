// Example environment variables for different deployment scenarios
// Copy this file to .env.local and customize as needed

// ==================================================
// BASIC CONFIGURATION
// ==================================================

// Site URL (used for SEO and social sharing)
VITE_SITE_URL=https://your-domain.com

// Site name
VITE_SITE_NAME="Your Name - FullStack Developer"

// Contact email
VITE_CONTACT_EMAIL=your.email@gmail.com

// ==================================================
// ANALYTICS (Optional)
// ==================================================

// Google Analytics Measurement ID
// VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

// Google Tag Manager ID
// VITE_GTM_ID=GTM-XXXXXXX

// ==================================================
// SOCIAL MEDIA (Optional)
// ==================================================

// GitHub username
VITE_GITHUB_USERNAME=your-github-username

// LinkedIn profile
VITE_LINKEDIN_USERNAME=your-linkedin-username

// Twitter username
VITE_TWITTER_USERNAME=your-twitter-username

// ==================================================
// FEATURES FLAGS (Optional)
// ==================================================

// Enable/disable blog section
VITE_ENABLE_BLOG=false

// Enable/disable contact form
VITE_ENABLE_CONTACT_FORM=false

// Enable/disable animations
VITE_ENABLE_ANIMATIONS=true

// ==================================================
// EXTERNAL SERVICES (Optional)
// ==================================================

// Formspree form ID (for contact form)
// VITE_FORMSPREE_ID=your-form-id

// EmailJS service configuration
// VITE_EMAILJS_SERVICE_ID=your-service-id
// VITE_EMAILJS_TEMPLATE_ID=your-template-id
// VITE_EMAILJS_USER_ID=your-user-id

// ==================================================
// CUSTOMIZATION
// ==================================================

// Primary brand color (hex without #)
VITE_PRIMARY_COLOR=0ea5e9

// Accent color (hex without #)
VITE_ACCENT_COLOR=10b981

// Default theme (dark or light)
VITE_DEFAULT_THEME=dark

// ==================================================
// NOTES
// ==================================================

// 1. Variables starting with VITE_ are exposed to the client
// 2. Never commit sensitive data to version control
// 3. Use different .env files for different environments
// 4. Most of these variables are optional and have defaults